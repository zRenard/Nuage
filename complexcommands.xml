    <query>
        <regexpr>[(hello)|(salut)] [@]*${botname}</regexpr>
        <list_response>
            <reponse>
                <to_tagname>${designertag}</to_tagname>
                <text>Salut ${name} ! Mon concepteur d'amour !</text>
            </reponse>
            <reponse>
                <to_tagname>*</to_tagname>
